@page "/"

<section class="hero">
    <div class="hero-grid">
        <div class="hero-copy">
            <p class="eyebrow">Airline ops copilot</p>
            <h1>Expert airline pilot chatbot</h1>
            <p class="lede">
                Chat with a seasoned airline captain for SOPs, dispatch decisions, abnormal checklists, and passenger comms.
                Built on Azure OpenAI + Azure AI Search, wrapped in a production-ready Blazor shell with subscriptions.
            </p>
            <div class="cta-row">
                <a class="btn primary" href="/app">Enter app</a>
                <AuthorizeView>
                    <NotAuthorized>
                        <a class="btn ghost" href="/auth/signin">Sign in</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
            <div class="signal-row">
                <span class="signal-pill">Line pilot expertise</span>
                <span class="signal-pill">Azure-native RAG</span>
                <span class="signal-pill">Stripe subscriptions</span>
            </div>
        </div>
        <div class="hero-panel">
            <div class="panel">
                <div class="panel-header">
                    <span class="dot dot-green"></span>
                    <span class="dot dot-amber"></span>
                    <span class="dot dot-blue"></span>
                    <p>RAG &amp; Billing flow</p>
                </div>
                <ol class="flow">
                    <li>
                        <div class="label">Collect</div>
                        <p>Ingest FCOM, QRH, MEL, and training guides into Blob Storage and index with Azure AI Search.</p>
                    </li>
                    <li>
                        <div class="label">Retrieve</div>
                        <p>Server-side SSE endpoint fans out to Search + Azure OpenAI for grounded, citeable cockpit guidance.</p>
                    </li>
                    <li>
                        <div class="label">Monetize</div>
                        <p>Stripe Checkout + webhooks map pro subscriptions to crew access and daily message quotas.</p>
                    </li>
                </ol>
                <div class="panel-footer">
                    <span class="metric">net10.0</span>
                    <span class="metric">C# 14</span>
                    <span class="metric">Azure App Service (Linux)</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="feature-grid">
    @foreach (var feature in Features)
    {
        <article class="feature-card">
            <p class="feature-kicker">@feature.Tag</p>
            <h3>@feature.Title</h3>
            <p>@feature.Description</p>
        </article>
    }
</section>
